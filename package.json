{
  "name": "help-editor",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Vahe Khachatryan",
    "email": "vahe.khachatryan.1999@gmail.com"
  },
  "dependencies": {
    "draftjs-to-html": "^0.9.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-draft-wysiwyg": "^1.14.7",
    "react-scripts": "5.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^6.0.1"
  },
  "scripts": {
    "start": "set PORT=3001 && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"npm start\" \"wait-on tcp:3001 && electron .\"",
    "build-electron": "electron-builder --linux"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "my.id",
    "productName": "Help editor",
    "asar": false,
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "icon": "public/favicon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
